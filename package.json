{
    "name": "richelieu-feistel-cipher",
    "version": "1.1.0",
    "type": "module",
    "scripts": {
        "lint": "bun run eslint --fix .",
        "format": "bun run --bun prettier . --write --ignore-path .gitignore",
        "dev": "bun run --bun vite",
        "build": "bun run --bun tsc && bun run --bun vite build",
        "preview": "bun run --bun vite preview",
        "test": "bun run jest",
        "test:coverage": "bun run jest --coverage",
        "typecheck": "bun run --bun tsc",
        "prepare": "bun run --bun husky"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(json|md|yaml|yml|Dockerfile)": [
            "bun run --bun prettier --write --ignore-path .gitignore"
        ],
        "*.(js|jsx|mjs|ts|tsx)": [
            "bun run --bun prettier --write --ignore-path .gitignore",
            "bun run --bun eslint --fix"
        ]
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "daisyui": "^5.5.14",
        "tslib": "^2.7.0",
        "typescript": "^5.9.2",
        "vite": "^5.4.2"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.0",
        "@jest/globals": "^29.7.0",
        "@typescript-eslint/eslint-plugin": "^8.51.0",
        "@typescript-eslint/parser": "^8.51.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-better-tailwindcss": "^3.7.10",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react-hooks": "^7.0.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.2.6",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "ts-jest": "^29.2.5",
        "typescript-eslint": "^8.51.0"
    }
}
